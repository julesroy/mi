{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "plugins": ["prettier-plugin-blade", "@prettier/plugin-php"],
    "printWidth": 1000,
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "blade",
                "printWidth": 1000,
                "tabWidth": 4,
                "singleQuote": true,
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": "*.php",
            "options": {
                "parser": "php",
                "tabWidth": 4,
                "singleQuote": true,
                "printWidth": 1000
            }
        }
    ]
}